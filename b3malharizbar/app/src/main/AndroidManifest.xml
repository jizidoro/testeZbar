<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.malharia.b3.b3malharizbar">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_b3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_b3_2"
        android:supportsRtl="true"
        android:hardwareAccelerated="true">
        <activity android:name="com.malharia.b3.b3malharizbar.activity.MainActivity"
            android:theme="@style/AppTheme"
            android:label="B3 Malharia Scanner">

        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.ScanOrdemActivity"
            android:theme="@style/AppOverlayTheme"
            android:label="Scan ordem">
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.EncerramentoActivity"
            android:theme="@style/AppOverlayTheme"
            android:label="Termina operação">


        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.ScanRolosActivity"
            android:theme="@style/AppOverlayTheme"
            android:label="Scan Rolos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.TesteWebserviceActivity"
            android:theme="@style/AppOverlayTheme"
            android:label="Teste Webservice">

        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.FullScannerActivity"
            android:theme="@style/AppOverlayTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="Scannear Cracha">
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.FullScannerFragmentActivity"
            android:theme="@style/AppOverlayTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="Scanner Operação">
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.FullScannerScanOrdemActivity"
            android:theme="@style/AppOverlayTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="Scanner da Ordem de Produção">
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.FullScannerScanEstornaOrdemActivity"
            android:theme="@style/AppOverlayTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="Scanner da Ordem de Produção">
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.FullScannerMainActivity"
            android:theme="@style/AppOverlayTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="Scanner Cracha">
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.SimpleScannerActivity"
            android:theme="@style/AppOverlayTheme"
            android:label="Teste Scanner Fragment">
        </activity>

        <activity android:name="com.malharia.b3.b3malharizbar.activity.SimpleScannerFragmentActivity"
            android:theme="@style/AppOverlayTheme"
            android:label="Teste Scanner">
        </activity>
    </application>

</manifest>